<div class="row">
    <div class="twelve columns book-container">
        <div class="card book">
            <div class="card-content">
                <h3>{{this.title}}</h3>
                <p><strong>Author:</strong> {{this.author}}</p>
                <p><strong>Genre:</strong> {{this.genre}}</p>
                <p><strong>Description:</strong>{{this.description}}</p>
                <img src="{{this.thumbnail}}" alt="{{this.title}}">
                <!-- Read count input -->
                <div class="read-count-container">
                    <label for="readCount">Times Read:</label>
                    <input class="u-full-width read-count-input" type="number" id="readCount" name="readCount" value="{{this.readCount}}">
                    <button class="button-primary update-read-count-btn" data-book-id="{{this.book_id}}">Update</button>
                </div>
                <!-- Delete button -->
                <button class="button delete-btn" data-book-id="{{this.book_id}}">Delete</button>
            </div>
        </div>
        
        <!-- Comments Section -->
        <div class="comments-section">
            <h3>Comments</h3>
            {{#each comments as |comment| }}
                <div class="card shadow p-3 mb-2">
                    <p>{{comment.comment_body}} by {{comment.user.name}} on {{comment.date_created}}</p>
                    <button data-id="{{comment.id}}" class="delete">Delete Comment</button>
                </div>
            {{/each}}
        </div>

        <!-- Comment Form -->
        <div class="comment-form-container">
            {{> comment-form }}
        </div>
    </div>
</div>


<script src="/comment.js"></script>
<script src="/editReadCount.js"></script>
<script src="/deleteBook.js"></script>


